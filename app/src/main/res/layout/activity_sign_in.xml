<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="signInVM" type="com.gideonsapplication.app.modules.signin.data.viewmodel.SignInVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearSignin"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_100">
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnrectangle4191"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="vertical">
            <View android:background="@color/gray_100"
                android:id="@+id/viewRectangle4191"
                android:layout_height="@dimen/_17pxv" android:layout_width="@dimen/_391pxh"/>
            <FrameLayout android:id="@+id/frameStackemail"
                android:layout_height="@dimen/_210pxv"
                android:layout_marginTop="@dimen/_8pxv" android:layout_width="match_parent">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtEmail"
                    android:layout_gravity="bottom|start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginEnd="@dimen/_96pxh"
                    android:layout_marginStart="@dimen/_96pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtEmail}"
                    style="@style/txtPoppinsregular13" tools:text="@string/lbl_email"/>
                <FrameLayout android:id="@+id/frameStackwelcometoane"
                    android:layout_gravity="start"
                    android:layout_height="@dimen/_210pxv" android:layout_width="match_parent">
                    <ImageView android:id="@+id/imageHeaderImageOne"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_210pxh"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        imageRes="@{@drawable/img_headerimage1_210x391}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_headerimage1_210x391"/>
                    <LinearLayout
                        android:id="@+id/linearColumnwelcometoane"
                        android:layout_gravity="bottom|start"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_21pxv"
                        android:layout_marginEnd="@dimen/_72pxh"
                        android:layout_marginStart="@dimen/_72pxh"
                        android:layout_marginTop="@dimen/_21pxv"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <TextView android:gravity="start"
                            android:id="@+id/txtWelcometoaNe"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="@{signInVM.signInModel.txtWelcometoaNe}"
                            style="@style/txtSourceSansProbold22" tools:text="@string/msg_welcome_to_a_ne"/>
                        <TextView android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:id="@+id/txtAbetterWayto"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_43pxh"
                            android:layout_marginStart="@dimen/_43pxh"
                            android:layout_marginTop="@dimen/_13pxv"
                            android:layout_width="match_parent"
                            android:singleLine="true"
                            android:text="@{signInVM.signInModel.txtAbetterWayto}"
                            style="@style/txtSourceSansProsemibold15" tools:text="@string/msg_a_better_way_to"/>
                    </LinearLayout>
                </FrameLayout>
            </FrameLayout>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowuser"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_45pxh"
                android:layout_marginStart="@dimen/_45pxh"
                android:layout_marginTop="@dimen/_45pxv"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <ImageView android:id="@+id/imageUser"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_width="@dimen/_16pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_user"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtIDNUMBER"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_weight="0.81"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtIDNUMBER}"
                    style="@style/txtPoppinsregular13_1" tools:text="@string/lbl_id_number"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/black_900"
            android:id="@+id/lineLineThree"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_45pxh"
            android:layout_marginStart="@dimen/_45pxh"
            android:layout_marginTop="@dimen/_28pxv" android:layout_width="@dimen/_297pxh"/>
        <ImageView android:id="@+id/imageVector"
            android:layout_gravity="start"
            android:layout_height="@dimen/_20pxh"
            android:layout_marginEnd="@dimen/_47pxh"
            android:layout_marginStart="@dimen/_47pxh"
            android:layout_marginTop="@dimen/_19pxv"
            android:layout_width="@dimen/_16pxh"
            android:scaleType="fitXY" android:src="@drawable/img_vector"
            tools:ignore="ContentDescription" tools:src="@drawable/img_vector"/>
        <View android:background="@color/black_900"
            android:id="@+id/lineLineFour"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_1pxv"
            android:layout_marginEnd="@dimen/_45pxh"
            android:layout_marginStart="@dimen/_45pxh"
            android:layout_marginTop="@dimen/_19pxv" android:layout_width="@dimen/_297pxh"/>
        <LinearLayout android:gravity="end"
            android:id="@+id/linearColumncheckmark"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8pxv"
            android:layout_marginEnd="@dimen/_33pxh"
            android:layout_marginStart="@dimen/_45pxh"
            android:layout_marginTop="@dimen/_26pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearRowforgotpassword"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearRowcheckmark"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.53"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageCheckmark"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_checkmark"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_checkmark"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtRememebrme"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5pxv"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.83"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{signInVM.signInModel.txtRememebrme}"
                        style="@style/txtPoppinsregular13" tools:text="@string/lbl_rememebr_me"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtForgotpassword"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginStart="@dimen/_69pxh"
                    android:layout_weight="0.47"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtForgotpassword}"
                    style="@style/txtPoppinsregular13_1" tools:text="@string/msg_forgot_password"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnLogin"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_58pxh"
                android:layout_marginStart="@dimen/_33pxh"
                android:layout_marginTop="@dimen/_34pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_12pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_12pxv"
                android:singleLine="true"
                android:text="@string/lbl_login2"
                android:textAllCaps="false" style="@style/btnSolid" tools:text="@string/lbl_login2"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearRowconfirmation"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_34pxh"
                android:layout_marginStart="@dimen/_14pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtConfirmation"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_9pxv"
                    android:layout_weight="0.65"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtConfirmation}"
                    style="@style/txtPoppinsregular13" tools:text="@string/msg_don_t_have_an_a"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtSignuphere"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_weight="0.35"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{signInVM.signInModel.txtSignuphere}"
                    style="@style/txtPoppinsregular13_1" tools:text="@string/lbl_sign_up_here"/>
            </LinearLayout>
            <LinearLayout android:gravity="end"
                android:id="@+id/linearRowsageaaffiliate"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_1pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageSAGEAaffiliate"
                    android:layout_height="@dimen/_57pxh"
                    android:layout_width="@dimen/_196pxh"
                    android:scaleType="fitXY"
                    imageRes="@{@drawable/img_sageaaffiliate}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_sageaaffiliate"/>
                <ImageView android:id="@+id/imageChatOne"
                    android:layout_height="@dimen/_45pxh"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginStart="@dimen/_48pxh"
                    android:layout_width="@dimen/_44pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_chat1"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_chat1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
